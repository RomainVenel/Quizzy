<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quizzy.mrk.quizzy">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MonQuizOptionsActivity"></activity>
        <activity android:name=".ListeAmisActivity" />
        <activity android:name=".ConnexionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InscriptionActivity"
            android:parentActivityName=".ConnexionActivity" />
        <activity android:name=".DashboardActivity" />
        <activity android:name=".QuizActivity" />
        <activity android:name=".PartsActivity" />
        <activity android:name=".QuestionActivity" />
        <activity android:name=".ProfilActivity" />
        <activity android:name=".MesQuizActivity" />
        <activity android:name=".PassageQuizActivity" />
        <activity android:name=".TransitionPassageQuizActivity" />
        <activity android:name=".FriendsRequestActivity" />
        <activity android:name=".AddFriendActivity"></activity>
    </application>

</manifest>